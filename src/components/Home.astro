---
import SocialLinks from "./SocialLinks.astro";
import GitHubIcon from "./icons/GitHub.astro";
import LinkIcon from "./icons/LinkIcon.astro";
import LinkedInIcon from "./icons/LinkedIn.astro"
import MailIcon from './icons/Mail.astro'
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<section id="home" class=" mb-20 xl:mb-0">
    <div class="flex flex-col-reverse gap-y-12 lg:gap-y-0 lg:flex-row lg:mt-20">

        <div class=" flex flex-col justify-center md:items-center lg:w-1/2">
            <div class="flex flex-col">
                <p class="lg:uppercase font-semibold">Web developer</p>
                <h1 class="font-bold text-4xl md:text-5xl xl:text-7xl 2xl:text-8xl mb-6">Daniel Agudelo</h1>
            </div>
            <div class="flex lg:ml-14 xl:ml-16 2xl:ml-24">
                <p class=" justify-center items-center md:text-center lg:text-start">
                    {t(`home.summary`)}
                </p>
            </div>
            <div class="flex gap-x-4 pt-6 items-center justify-center lg:hidden xl:flex xl:mt-20">

                <a class="hidden md:flex gap-2 px-4 py-2 rounded-md bg-[#FF7F50] text-[#8F1E00] hover:bg-[#DD6236] dark:bg-[#0D6E6E] dark:text-[#AFFFFF] dark:hover:bg-[#4A9D9C] hover:scale-110 transition-transform duration-300 md:text-xl shadow-md" href="#contact" aria-label="Contact me"><MailIcon class="size-7"/> {t(`home.contactme`)}</a>
                <SocialLinks class="hidden md:flex" href="https://github.com/daniel-agudelo21" aria_label="Daniel's GitHub"><GitHubIcon class="size-6"/> GitHub</SocialLinks>
                <SocialLinks class="hidden md:flex" href="https://www.linkedin.com/in/dan-agud/" aria_label="Daniel's LinkedIn"><LinkedInIcon class="size-6"/> LinkedIn</SocialLinks>
                <SocialLinks class="hidden md:flex" href="/assest/English_CV_Daniel_Agudelo.pdf"><LinkIcon class="size-7" /> {t(`home.cv`)}</SocialLinks>
                
                <a class=" md:hidden gap-2 px-4 py-2 rounded-md bg-[#FF7F50] text-[#8F1E00] hover:bg-[#DD6236] dark:bg-[#0D6E6E] dark:text-[#AFFFFF] dark:hover:bg-[#4A9D9C] hover:scale-110 transition-transform duration-300 md:text-xl shadow-md" href="#contact"  aria-label="Contact me"><MailIcon class="size-7"/></a>
                <SocialLinks class="md:hidden" href="https://github.com/daniel-agudelo21" aria_label="Daniel's GitHub"><GitHubIcon class="size-6"/></SocialLinks>
                <SocialLinks class="md:hidden" href="https://www.linkedin.com/in/dan-agud/" aria_label="Daniel's LinkedIn"><LinkedInIcon class="size-6"/></SocialLinks>
                <SocialLinks class=" md:hidden text-xl font-semibold tracking-wider" href="/assest/English_CV_Daniel_Agudelo.pdf"> CV</SocialLinks>
            </div>
        </div>
        <div class="lg:w-1/2 flex flex-col justify-center items-center">
            <img
                class=" size-96 border-none xl:size-[672px] rounded-full drop-shadow-[5px_5px_2px_rgba(0,0,0,0.5)]"
                src="../../assest/logoCurvo.svg"
                alt="Perfil"
            />
            <span class="lg:mt-20"></span>
        </div>
    </div>
    <div class="hidden gap-x-4 pt-6 items-center justify-center lg:flex xl:hidden xl:mt-20">
        <a class="hidden md:flex gap-2 px-4 py-2 rounded-md bg-[#FF7F50] text-[#8F1E00] hover:bg-[#DD6236] dark:bg-[#0D6E6E] dark:text-[#AFFFFF] dark:hover:bg-[#4A9D9C] hover:scale-110 transition-transform duration-300 md:text-xl shadow-md" href="#contact"  aria-label="Contact me"><MailIcon class="size-7"/> {t(`home.contactme`)}</a>
        <SocialLinks class="hidden md:flex" href="https://github.com/daniel-agudelo21" aria_label="Daniel's GitHub"><GitHubIcon class="size-6"/> GitHub</SocialLinks>
        <SocialLinks class="hidden md:flex" href="https://www.linkedin.com/in/dan-agud/"  aria_label="Daniel's LinkedIn"><LinkedInIcon class="size-6"/> LinkedIn</SocialLinks>
        <SocialLinks class="hidden 2xl:flex" href="/assest/English_CV_Daniel_Agudelo.pdf"><LinkIcon class="size-7" /> {t(`home.cv`)}</SocialLinks>

        <a class="md:hidden gap-2 px-4 py-2 rounded-md bg-[#FF7F50] text-[#8F1E00] hover:bg-[#DD6236] dark:bg-[#0D6E6E] dark:text-[#AFFFFF] dark:hover:bg-[#4A9D9C] hover:scale-110 transition-transform duration-300 md:text-xl shadow-md" href="#contact"  aria-label="Contact me"><MailIcon class="size-7"/></a>
        <SocialLinks class="md:hidden" href="https://github.com/daniel-agudelo21" aria_label="Daniel's GitHub"><GitHubIcon class="size-6"/></SocialLinks>
        <SocialLinks class="md:hidden" href="https://www.linkedin.com/in/dan-agud/"  aria_label="Daniel's LinkedIn"><LinkedInIcon class="size-6"/></SocialLinks>
        <SocialLinks class=" 2xl:hidden text-xl font-medium tracking-wider" href="/assest/English_CV_Daniel_Agudelo.pdf"><LinkIcon class="size-7" /> {t(`home.cv`)}</SocialLinks>
    </div>
</section>
