---
interface Props {
    title: string;
    date: string;
    universidad: string;
}

const { title, date, universidad } = Astro.props;
---

<div
    class="absolute w-3 h-3 rounded-full mt-12 -start-1.5 border border-gray-900 bg-[#8B4513] dark:bg-[#FF3D3D] "
>
</div>
<h3 class="text-2xl mb-2 font-semibold">{title}</h3>
<p class="mb-1 mt-2 text-lg">{universidad}</p>
<time
    datetime=""
    class="text-sm text-black/50 dark:text-white/50"
    >{date}</time
>
